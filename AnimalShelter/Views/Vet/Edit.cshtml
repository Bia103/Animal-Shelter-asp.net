
@model AnimalShelter.Models.Vet
@{
    ViewBag.Title = "Update";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm(actionName: "Edit", controllerName: "Vet"))
{
    @Html.HttpMethodOverride(HttpVerbs.Put)

    @Html.HiddenFor(a => a.VetId)
    <br />

    @Html.Label("Name", "Name:")
    <br />
    @Html.EditorFor(a => a.Name, new { htmlAttributes = new { @class = "form-control" } })
    @Html.ValidationMessageFor(a => a.Name, "", new { @class = "text-danger" })
    <br />

    @Html.Label("Phone", "Phone:")
    <br />
    @Html.EditorFor(a => a.PhoneNumber, new { htmlAttributes = new { @class = "form-control" } })
    @Html.ValidationMessageFor(a => a.PhoneNumber, "", new { @class = "text-danger" })
    <br />

    <br />
    <br />

    <button class="btn btn-primary" type="submit">Update</button>
}
