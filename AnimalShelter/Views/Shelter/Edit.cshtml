@model AnimalShelter.Models.Shelter
@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm(actionName: "Edit", controllerName: "Shelter"))
{
    @Html.HttpMethodOverride(HttpVerbs.Put)

    @Html.HiddenFor(a => a.ShelterId)
    <br />

    @Html.Label("Name", "Name:")
    <br />
    @Html.EditorFor(a => a.Name, new { htmlAttributes = new { @class = "form-control" } })
    @Html.ValidationMessageFor(a => a.Name, "", new { @class = "text-danger" })
    <br />

    @Html.Label("City", "City:")
    <br />
    @Html.EditorFor(a => a.Location.City, new { htmlAttributes = new { @class = "form-control" } })
    @Html.ValidationMessageFor(a => a.Location.City, "", new { @class = "text-danger" })
    <br />

    @Html.Label("Adress", "Adress:")
    <br />
    @Html.TextAreaFor(a => a.Location.Adress, new { @class = "form-control" })
    @Html.ValidationMessageFor(a => a.Location.Adress, "", new { @class = "text-danger" })
    <br />

    @Html.Label("Number", "Number:")
    <br />
    @Html.TextAreaFor(a => a.Location.Number, new { @class = "form-control" })
    @Html.ValidationMessageFor(a => a.Location.Number, "", new { @class = "text-danger" })
    <br />
    <br />

    <button class="btn btn-primary" type="submit">Update</button>
}
